
<h1>New note</h1>

<% form_for(@note) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
   
  
<!--Show all the available categories as options-->   
<p> Choose a category
<% for i in Category.all do %>
   <p>
     <%= f.radio_button(:category_id, i.id) %> <%= f.label i.name %>
   </p>
<% end %>
      
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', notes_path %>