<!-- import jrails-->
<%= javascript_include_tag 'jquery' %>
<%= javascript_include_tag :defaults %>
<%= javascript_include_tag 'jrails' %>
 

<h1>Listing categories</h1>
<br/>
<p>
<table cellspacing = 10 cellpadding = 10>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%=h category.name %></td>
    <td><%=h category.description %></td>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
    <td><%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<p>
<br/>

<!-- search notes for a particular category -->
<div>
<h2>Search Notes: </h2>
<label for="category">Enter the Category</label>
<input type="text" id="category" name="m[category]" style="width:50%;"/>'
<button id="execute-search"> Search </button>
<div>

<br />
<!-- div to display the results -->
 <div class="results" id="search-results"></div>
<p>

<%= link_to 'New category', new_category_path %>